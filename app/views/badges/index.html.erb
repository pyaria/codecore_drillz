<h1>Badges</h1>

<% @badges.each do |b| %>
  <%= link_to b.name, badge_path(b) %>&nbsp&nbsp&nbsp
  <% if b.image.present? %>
    <%= image_tag b.image.url(:small) %>
  <% end %>
  <%= link_to "Show", badge_path(b), class: "btn btn-default pull-right" %>
  <%= link_to "Edit", edit_badge_path(b), class: "btn btn-default pull-right" %>
  <%= link_to "Delete", badge_path(b), method: :delete, class: "btn btn-default pull-right" %>
  <hr>
<% end %>
