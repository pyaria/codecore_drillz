<h1 class="page-header"><%= @dg.name %></h1>
<p><%= @dg.description %></p>
<% level = "" %>
<% if level == 0 %>
  <% level = "Beginner" %>
<% elsif level == 1 %>
  <% level = "Intermediate" %>
<% else %>
  <% level = "Advanced" %>
<% end %>
<p><%= level %></p>
<p>Created by: <%= @dg.user.first_name %> <%= @dg.user.last_name %></p>

<% if user_signed_in? && current_user.admin %>
  <%= link_to "Edit", edit_drill_group_path(@dg), class: "btn btn-info btn-sm" %>
  <%= link_to "Delete", drill_group_path(@dg), {method: :delete, class: "btn btn-danger btn-sm", data: {confirm: "Are you sure you want to delete this drill group?"}}%>
  <!-- MOVED THIS INSIDE ADMIN AUTHENTICATION BLOCK BECAUSE ONLY ADMIN CAN ACCESS THESE -->
  <h2 id="add_drill_heading">Add a Drill</h2>
  <!-- RENDER NEW DRILLS FORM -->
  <%= render "/drills/form" %>
<% end %>

<% if @drills.present? %>
  <h2>Drills</h2>
  <div id="drills">
    <% @drills.each do |drill| %>
      <div class="well" id="<%= dom_id(drill) %>">
        <%= drill.name %>
        <%= drill.description %>
        <%= link_to "Do this drill!", drill_group_drill_path(@dg, drill), class: "btn btn-primary btn-sm pull-right" %>
        <% if user_signed_in? && current_user.admin %>
          <%= link_to "Edit/Add Answer", edit_drill_group_drill_path(@dg, drill), class: "btn btn-primary" %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
